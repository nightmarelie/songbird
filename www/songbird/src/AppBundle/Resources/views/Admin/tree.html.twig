{% for v in tree %}
    <li class='dd-item' data-id='{{ v.getId() }}'>
        <div class='dd-handle'>
            <a class="dd-nodrag" href="{{ path('admin_page_edit', {id: v.getId()}) }}">{{ v.getSlug() }}</a>
            <a title="Delete" class="dd-nodrag btn-default delete_link" href="{{ path('admin_page_delete', {id: v.getId()}) }}">
                <i class="glyphicon glyphicon-remove"></i>
            </a>

        </div>

        {% set children = v.getChildren()|length %}
        {% if children > 0 %}
            <ol class='dd-list'>
                {% include "AppBundle:Admin:tree.html.twig" with { 'tree':v.getChildren() } %}
            </ol>
        {% endif %}
    </li>
{% endfor %}